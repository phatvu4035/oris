<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="oristar_contact_form" name="Contact" inherit_id="website.contactus">
        <xpath expr="//div[@id='wrap']" position="replace">
            <div class="wrap">
                <t t-set="no_footer" t-value="True"/>
                <div class="contact s_website_form">
                    <div class="map">
                        <iframe
                            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3722.610156399353!2d105.80764115111268!3d21.088227091051095!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135aa96eaec3d57%3A0x1785887080ef0bca!2zMTggUC4gUGjDuiBYw6EsIFBow7ogWMOhLCBUw6J5IEjhu5MsIEjDoCBO4buZaSwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1645947749697!5m2!1svi!2s"
                            width="100%" height="650" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    </div>
                    <div class="container">
                        <div class="things">
                            <div class="row align-items-center">
                                <div class="col-lg-6">
                                    <div class="title">
                                        <h4>Contact Us</h4>
                                        <p>Please share your questions with us.
                                            Oristar will respond to you within 2-4 hours</p>
                                    </div>
                                    <div class="content">
                                        <span><img src="/theme_oristar/static/src/images/icons/Vector_13.png" alt="" />+0284 969 468</span>
                                        <span><img src="/theme_oristar/static/src/images/icons/Vector_14.png" alt="" />hello@oristar.com.vn</span>
                                        <span><img src="/theme_oristar/static/src/images/icons/Vector_15.png" alt="" />120 Dương Đình Nghệ, Duy Tân, Hà Nội</span>
                                        <ul class="mxh">
                                            <li><a href=""><img src="/theme_oristar/static/src/images/icons/Facebook.png" alt="" /></a></li>
                                            <li><a href=""><img src="/theme_oristar/static/src/images/icons/Youtube.png" alt="" /></a></li>
                                            <li><a href=""><img src="/theme_oristar/static/src/images/icons/Twitter.png" alt="" /></a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form">
                                        <form id="contactus_form" action="/website_form/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-model_name="mail.mail" data-success-mode="redirect" data-success-page="/contactus-thank-you">
                                            <div class="form-group">
                                                <label for="">Full Name <span class="s_website_form_mark"> *</span></label>
                                                <input id="contact1" type="text" class="form-control s_website_form_input form-control" name="Name" required=""/>
                                            </div>
                                            <div class="form-group">
                                                <label for="">Email <span class="s_website_form_mark"> *</span></label>
                                                <input id="contact3" type="email" class="form-control s_website_form_input form-control" name="email_from" required=""/>
                                            </div>
                                            <div class="form-group">
                                                <label for="">Title <span class="s_website_form_mark"> *</span></label>
                                                <input id="contact5" type="text" class="form-control s_website_form_input form-control" name="subject" required=""/>
                                            </div>
                                            <div class="form-group">
                                                <label for="">Message</label>
                                                <textarea id="contact6" class="form-control s_website_form_input form-control" name="Description" required=""></textarea>
                                            </div>
                                            <div class="\s_website_form_submit" data-name="Submit Button">
                                                <button type="button" class="s_website_form_send">Submit</button>
                                                <span class="s_website_form_result"></span>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
